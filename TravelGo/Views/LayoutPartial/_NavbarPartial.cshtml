<header id="site-header" class="fixed-top">
    <div class="container">
        <nav class="navbar navbar-expand-lg stroke">
            <h1>
                <a class="navbar-brand mr-lg-5" asp-controller="Default" asp-action="Index">
                    TravelGo
                </a>
            </h1>
            <!-- if logo is image enable this
            <a class="navbar-brand" href="#index.html">
                <img src="image-path" alt="Your logo" title="Your logo" style="height:35px;" />
            </a> -->
            <button class="navbar-toggler  collapsed bg-gradient" type="button" data-toggle="collapse"
                    data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon fa icon-expand fa-bars"></span>
                <span class="navbar-toggler-icon fa icon-close fa-times"></span>
                </span>
            </button>
            @{
                string currentPath = Context.Request.Path;
                string homePath = Url.Action("Index", "default");
                string destinationPath = Url.Action("Index", "Destination");
                string guidePath = Url.Action("Index", "Guide");
                string contactPath = Url.Action("Index", "Contact");
                // Add other link paths as needed
            }
            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item @((currentPath==homePath)? "active":"")">
                        <a class="nav-link" asp-controller="Default" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item @((currentPath==destinationPath)? "active":"") ">
                        <a class="nav-link" asp-controller="Destination" asp-action="Index">Destinations </a>
                    </li>
                    <li class="nav-item @((currentPath==guidePath)? "active":"")">
                        <a class="nav-link" asp-controller="Guide" asp-action="Index">Guides </a>
                    </li>
                    <li class="nav-item @((currentPath==contactPath)? "active":"")">
                        <a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a>
                    </li>

                </ul>
            </div>
            <div class="d-lg-block d-none">
                <a href="contact.html" class="btn btn-style btn-secondary">Get Reservation</a>
            </div>
            <!-- toggle switch for light and dark theme -->
            <div class="mobile-position">
                <nav class="navigation">
                    <div class="theme-switch-wrapper">
                        <label class="theme-switch" for="checkbox">
                            <input type="checkbox" id="checkbox">
                            <div class="mode-container">
                                <i class="gg-sun"></i>
                                <i class="gg-moon"></i>
                            </div>
                        </label>
                    </div>
                </nav>
            </div>
            <!-- //toggle switch for light and dark theme -->
        </nav>
    </div>
</header>