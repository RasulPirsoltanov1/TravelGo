@{
    var currentRoute = Context.Request.Path;
    string parameterValue = Context?.Request?.Query?["searchName"];
}


<ul class="nav navbar-nav float-right">
    <li class="dropdown dropdown-language nav-item">
        <a class="dropdown-toggle nav-link" id="dropdown-flag" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="flag-icon flag-icon-us"></i><span class="selected-language"></span></a>
        <div class="dropdown-menu" aria-labelledby="dropdown-flag">
            <div class="arrow_box">
                <a class="dropdown-item" href="@currentRoute?@(parameterValue!="" ? "searchName="+parameterValue+"&":"")culture=en"><i class="flag-icon flag-icon-us"></i> English</a>
                <a class="dropdown-item" href="@currentRoute?@(parameterValue!="" ? "searchName="+parameterValue+"&":"")culture=ru"><i class="flag-icon flag-icon-ru"></i> Russian</a>
                <a class="dropdown-item" href="@currentRoute?@(parameterValue!="" ? "searchName="+parameterValue+"&":"")culture=az"><i class="flag-icon flag-icon-az"></i> Azerbaijan</a>
            </div>
    </li>
</ul>