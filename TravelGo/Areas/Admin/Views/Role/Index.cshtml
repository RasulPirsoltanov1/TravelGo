@using EntityLayer.Concrete;
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Index</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                @(count++)
                <tr>
                    <td>@count</td>
                    <td>@item.Name</td>
                    <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                    <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Edit</a></td>
                </tr>
            }
        }
        else
        {
            <div class="alert alert-danger"> Have not any Role </div>
        }

    </tbody>
</table>
<a asp-action="UserAssignRoleList" asp-controller="Role" asp-area="admin"
   target="_blank"
   class="btn btn-primary btn-buy-now">User Roles</a>


<div class="buy-now">
    <a asp-action="Add" asp-controller="Role" asp-area="admin"
       target="_blank"
       class="btn btn-success btn-buy-now">Add new Role</a>
</div>

