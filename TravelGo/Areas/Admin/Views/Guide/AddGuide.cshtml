@using EntityLayer.Concrete;

@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Guide


<h1>NewReservation Page</h1>
<div asp-validation-summary="All" style="color:red;"></div>
<form method="post">

    <div class="form-group">
        <label for="PersonCount">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ReservationDate">Twitter Url</label>
        <input type="text" asp-for="TwitterUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ReservationDate">Instagram</label>
        <input type="text" asp-for="InstagramUrl" class="form-control">
    </div>
    <div class="form-group">
        <label for="ReservationDate">Image</label>
        <input type="text" asp-for="Image" class="form-control">
    </div>
    <div class="form-group">
        <label for="ReservationDate">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="ReservationDate">Status</label>
        <input type="text" asp-for="Status" class="form-control">
    </div>
 
    <button type="submit" class="btn btn-primary">Create</button>
</form>


