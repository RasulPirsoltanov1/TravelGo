@using DTOLayer.DTOs.AnnouncementDTOs;
@model List<AnnouncementListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    h1 {
        color: #007BFF;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }

    tr:hover {
        background-color: #f2f2f2;
    }

    a {
        text-decoration: none;
        color: #007BFF;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
<h1>Announcement List</h1>
<table>
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Content</th>
        <th>Details</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>#</td>
            <td>@item.Title</td>
            <td>@item.Contante</td>
            <td><a asp-action="Update" asp-area="admin" asp-controller="Announcement" asp-route-id="@item.AnnouncementId" class="btn btn-primary">Update</a></td>
            <td><a  class="btn btn-danger" asp-action="Delete" asp-area="admin" asp-controller="Announcement" asp-route-id="@item.AnnouncementId">Delete</a></td>
        </tr>
    }
</table>


<div class="buy-now">
    <a asp-action="Add" asp-controller="Announcement" asp-area="admin"
       target="_blank"
       class="btn btn-success btn-buy-now">Add new Announcement</a>
</div>