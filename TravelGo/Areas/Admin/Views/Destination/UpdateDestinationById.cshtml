@using EntityLayer.Concrete;
@model Destination
@{
    ViewData["Title"] = "UpdateDestinationById";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>NewReservation Page</h1>
<form method="post">
    <input type="hidden" asp-for="DestinationId"/>
    <div class="form-group">
        <label for="PersonCount">City</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ReservationDate">Day Night</label>
        <input type="text" asp-for="DayNight" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ReservationDate">Price</label>
        <input type="text" asp-for="Price" class="form-control">
    </div>
    <div class="form-group">
        <label for="ReservationDate">Image</label>
        <input type="text" asp-for="Image" class="form-control">
    </div>
    <div class="form-group">
        <label for="ReservationDate">Capacity</label>
        <input type="text" asp-for="Capacity" class="form-control">
    </div>
    <div class="form-group">
        <label for="ReservationDate">Cover Image</label>
        <input type="text" asp-for="CoverImage" class="form-control">
    </div>
    <div class="form-group">
        <label for="ReservationDate">Image2</label>
        <input type="text" asp-for="Image2" class="form-control">
    </div>
    <div class="form-group">
        <label for="ReservationDate">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="ReservationDate">Detail1</label>
        <textarea asp-for="Details1" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="ReservationDate">Detail2</label>
        <textarea asp-for="Details2" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>


